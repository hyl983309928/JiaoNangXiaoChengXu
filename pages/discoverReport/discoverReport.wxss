
.page{
  text-align: center;
  position: relative;
}

.wxInfoBox{
  margin-top: 40rpx;
  text-align: center;
  display: flex;
  align-items: center;
  color: #666;
  font-size: 28rpx;
  justify-content: center;
}
.wxInfoBox image{
  width:66rpx;
  height:66rpx;
  border-radius: 33rpx;
  margin-right: 20rpx;
}
.title{
  text-align: center;
  color: #333;
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 25rpx;
}
.panda{
  height:298rpx;
  width: 329rpx;
}
.text{
  font-size: 36rpx;
  font-weight: bold;
  color: #42d1d9;
  margin-bottom: 45rpx;
  max-width: 610rpx;
  display: inline-block;
}
.line{
  width: 100%;
  height: 20rpx;
  background: #f5f5f5;
}
.chart{
  margin-top: 40rpx;
}

.info{
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 54rpx;
  margin-bottom: 73rpx;
}
.infoItemBox{
  width:33%;
  text-align: center;
}
.infoItemBox .label{
  font-size: 28rpx;
  color: #999;
  margin-bottom: 30rpx;
}
.infoItemBox .data{
  font-size: 22rpx;
  color: #ccc;
}
.infoItemBox .data text{
  font-size: 50rpx;
  color: #333;
}
.surpass{
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 49rpx;
}
.shareBtn{
  position: relative;
  display: inline-block;
  width:500rpx;
  height:88rpx;
  line-height: 88rpx;
  text-align: center;
  color: #fff;
  background: #42d1d9;
  border-radius: 44rpx;
  font-size: 34rpx;
  margin-bottom: 40rpx;
  font-weight: bold;
}
.btn_more{
  position: relative;
  display: inline-block;
  box-sizing: border-box;
  width:500rpx;
  height:88rpx;
  line-height: 88rpx;
  text-align: center;
  color: #42d1d9;
  background: fff;
  border: 2rpx solid #42d1d9;
  font-size: 34rpx;
  border-radius: 44rpx;
  margin-bottom: 102rpx;
  font-weight: bold;
}

.canvasBox{
  width:660rpx;
  height:450rpx;
  margin: 0 auto;
}
.star{
  width:40rpx;
  height:37rpx;
  position: absolute;
  right: 48rpx;
  top: 15rpx;
}
.canvas{
  width:660rpx;
  height:450rpx;
}
.chart_title{
  font-size: 38rpx;
  color: #333;
  font-weight: bold;
}
.chartFoot{
  display: flex;
  justify-content: center;
  margin-bottom: 50rpx;
}
.footitem{
  display: inline-flex;
  justify-content: center;
  align-items: center;
  margin-right: 47rpx;
}
.footitem:last-child{
  margin-right: 0;
}
.footitem .line{
  display: inline-block;
  width:64rpx;
  height:10rpx;
  border-radius: 5rpx;
  margin-right: 21rpx;
}
.footitem .label{
  display: inline-block;
  font-size: 22rpx;
  color: #333;
}
.pageFoot{
  width:0;
  height:0;
  border-width: 40rpx;
  border-color: #E5E5E5 #f5f5f5 #f5f5f5 #e5e5e5;
  border-style: solid;
  position: absolute;
  right: 0;
  bottom: 0;
}

.chart_eadar{
  width:750rpx;
  height:600rpx;
  margin-top: 40rpx;
  margin-bottom: 70rpx;
}
.canvasEadar {
  width:750rpx;
  height:600rpx;
}














