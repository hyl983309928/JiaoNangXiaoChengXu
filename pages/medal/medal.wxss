

.bg{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: -1;
  width:100%;
  height:100%;
}
.medalList{
  display: flex;
  padding-top: 90rpx;
  box-sizing: border-box;
  flex-wrap: wrap;
}

.medalItem{
  width:33%;
  text-align: center;
  margin-bottom: 68rpx;
}
.medalItem .imgBox{
  margin-bottom: 32rpx;
}
.medalItem .imgBox image{
  width:184rpx;
  height:152rpx;
}
.info .name{
  font-size: 28rpx;
  color: #333;
  margin-bottom: 18rpx;
}
.info .time{
  font-size: 22rpx;
  color: #999;
}