.dialog{
  position: fixed;
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;
  z-index: 1110;
}
.dialog .mask{
  position: fixed;
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;
  z-index: 100;
  background: rgba(0,0,0,0.5);
}
.dialog .content{
  width: 518rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  border-radius: 30rpx;
  background: #fff;
  box-sizing: border-box;
  z-index: 1020;
  max-height: 90%;
  overflow: hidden;
  text-align: center;
}
