.page{
  padding-top: 80rpx;
}
.nav{
  box-sizing: border-box;
  height:80rpx;
  display: flex;
  border-bottom: 1px solid #ccc;
  align-items: center;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 999;
  background: #fff;
}
.nav .navItem{
  text-align: center;
  font-size: 32rpx;
  color: #999;
  width:25%;
}
.navItem .iconfont{
  transition: 0.3s all;
  display: inline-block;
  font-size: 28rpx;
}
.nav .active{
  color: #42d1d9;
}
.capsuleListBox{
  background: #f5f5f5;
}
.capsuleItemBox{
  padding: 30rpx;
  background: #fff;
  margin-bottom: 20rpx;
}
.capsuleItemBox .content{
  padding-bottom: 28rpx;
  border-bottom: 1px solid #e5e5e5;
  position: relative;
}
.capsuleItemBox .cover{
  width:206rpx;
  height: 206rpx;
  margin-right: 32rpx;
  border-radius: 20rpx;
}
.capsuleItemBox .info{
  display: inline-block;
  vertical-align: top;
  width:450rpx;
}
.capsuleItemBox .title{
  font-size: 36rpx;
  font-weight: bold;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 22rpx;
  margin-top: 8rpx;
}
.capsuleItemBox .target{
  margin-bottom: 14rpx;
}
.capsuleItemBox .target text{
  display: inline-block;
  padding: 0 20rpx;
  height:36rpx;
  line-height: 36rpx;
  text-align: center;
  border-bottom-left-radius: 18rpx;
  border-top-right-radius: 18rpx;
  margin-right: 23rpx;
}
.capsuleItemBox .introduce{
  font-size: 26rpx;
  color: #666666;
  line-height: 40rpx;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  overflow: hidden;
  text-overflow:ellipsis;
}
.capsuleItemBox .footInfo{
  font-size: 24rpx;
  color: #ccc;
  padding-top: 26rpx;
}
.capsuleItemBox .footInfo .time{
  display: inline-block;
  margin-right: 15rpx;
}
.capsuleItemBox .age{
  display: inline-block;
  float: right;
  color: #999;
}

.scren{
  position: fixed;
  top:80rpx;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1010;
  font-size: 30rpx;
  color: #333;
}
.scren .mask{
  position: absolute;
  background: rgba(0,0,0,0.6);
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}
.scren .content{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  background: #fff;
  width:100%;
  z-index: 1020;
}
.capsuleListBox .more{
  color: #aaa;
  font-size: 26rpx;
  text-align: center;
  padding: 50rpx 0;
}
.scren .optionBox{
}
.scren .optionBox .optionItem{
  padding: 20rpx 20rpx 20rpx 40rpx;
  border-bottom: 1px solid #f5f5f5;
}
.scren .active{
  color: #42d1d9;
}

.targetBox{

}
.targetBox .targetTop{
  display: flex;
}
.targetBox .targetTop_item{
  height:80rpx;
  line-height: 80rpx;
  text-align: center;
  box-sizing: border-box;
  border-bottom: 6rpx solid #fff;
  width:25%;
}
.targetBox .active_top{
  color: #42d1d9;
  border-bottom: 6rpx solid #42d1d9;
}
.targetTopBtn{
  display: inline-flex;
  align-items: center;
  justify-content: center;
  border-bottom:0px !important;
}
.targetTopBtn view{
  display: inline-block;
  width:130rpx;
  height:40rpx;
  line-height: 40rpx;
  border: 1px solid #333;
  border-radius: 20rpx;
  vertical-align: top;
}
.targetBox .targetContent{
}
.targetBox .targetLeft{
  width:300rpx;
  text-align: center;
  background: #fff;
  display: inline-block;
  vertical-align: top;
  height: 640rpx;
}
.targetBox .active_two{
  color: #42d1d9;
  background: #eee;
}
.targetBox .active_three{
  color: #42d1d9;
}
.targetBox .targetRight{
  overflow: hidden;
  height: 640rpx;
  width:450rpx;
  text-align: center;
  background: #eee;
  vertical-align: top;
  display: inline-block;
}
.targetBox .targetLeft_item, .targetBox .targetRight_item{
  height:80rpx;
  line-height: 80rpx;
}

.sceneOptionBox{
  max-height: 800rpx;
  overflow: hidden;
}


.exercisedImg{
  position: absolute;
  width: 108rpx;
  height: 108rpx;
  right: 0;
  bottom: 17rpx;
  z-index: 990;
}
.capsuleTypeBox{
  width:101rpx;
  height:34rpx;
  border-top-right-radius: 17rpx;
  border-bottom-right-radius: 17rpx;
  position: absolute;
  top: 20rpx;
  left: -4rpx;
  display: flex;
  align-items: center;
}
.capsuleTypeBox image{
  width:26rpx;
  height:26rpx;
  border-radius: 50% 50%;
  margin-right: 4rpx;
  margin-left: 5rpx;
}
.capsuleTypeBox text{
  font-size: 18rpx;
  color: #fff;
}










