
.dialog{
  position: fixed;
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;
  z-index: 1010;
}

.mask{
  position: fixed;
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;
  z-index: -1;
  background: rgba(0,0,0,0.6);
}

.content{
  width: 600rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  border-radius: 30rpx;
  background: #fff;
  box-sizing: border-box;
  padding: 20rpx;
  z-index: 1020;
  max-height: 90%;
}