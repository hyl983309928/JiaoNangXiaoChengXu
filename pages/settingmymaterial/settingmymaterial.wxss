.line{
  width: 100%;
  height: 20rpx;
  background: #f5f5f5;
}
.page{
  background: #F5F5F5;
  height:100%;
}
.button{
  width:690rpx;
  height:88rpx;
  border-radius: 44rpx;
  background: #42d1d9;
  color: #fff;
  margin-top: 50rpx;
}
.cropper{
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  z-index: 1030;
  background: #000;
}
.cropper-buttons{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  justify-content: center;
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 50px;
  line-height: 50px;
}
.cropper-buttons{
  background-color: rgba(0, 0, 0, 0.95);
  color: #fff;
}
.cropper-buttons .upload, .cropper-buttons .getCropperImage{
  width: 50%;
  text-align: center;
}
.close{
  position: absolute;
  top: 10px;
  right: 20px;
  font-size: 18px;
  color: #fff;
  z-index: 1040;
}

.inputDialog{
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(0,0,0,0.6);
}
.inputDialog .content{
  width: 600rpx;
  position: absolute;
  top: 30%;
  left: 50%;
  transform: translate(-50%);
  background: #fff;
  text-align: center;
  padding-top: 40rpx;
}
.inputDialog .title{
  font-size: 34rpx;
  color: #333;
}
.inputDialog .center{
  padding: 20rpx 0;
}
.inputDialog .foot{
  display: flex;
  border-top: 1px solid #e5e5e5;
}
.inputDialog .foot view{
  width:50%;
  font-size: 34rpx;
  line-height: 80rpx;
}
.inputDialog .foot .ok{
  border-left: 1px solid #e5e5e5;
  color: #42d1d9;
}
.input{
  text-align: left;
  padding: 10rpx 20rpx;
  width:80%;
  display: inline-block;
  border: 1px solid #e5e5e5;
}



















